$name:
  index:
    url: $name
  show:
    url: $name/{id}
    reg:
      - ([\d]+)
  new:
    url: $name/new
  create:
    url: $name/new
    verb: POST
  delete:
    url: $name/delete/{id}
    reg:
      - ([\d]+)
  edit:
    url: $name/edit/{id}
    reg:
      - ([\d]+)
  update:
    url: $name/edit/{id}
    verb: POST
    reg:
      - ([\d]+)
